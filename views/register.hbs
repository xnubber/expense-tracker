<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control mt-3" placeholder="Enter Name" value="{{ name }}">
        </div>
        <div class="form-group mt-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control mt-3" placeholder="Enter Email" value="{{ email }}">
        </div>
        <div class="form-group mt-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control mt-3" placeholder="Enter Password" value="{{ password }}">
        </div>
        <div class="form-group mt-3">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control mt-3"
            placeholder="Confirm Password" value="{{ confirmPassword }}">
        </div>
        <div class="d-flex flex-column mt-3">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>